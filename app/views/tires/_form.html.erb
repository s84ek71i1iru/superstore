<% if @tire.errors.any? %>
<div class="panel panel-danger">
  <div class="panel-heading">Problems</div>
  <div class="panel-body">
    <ul>
      <% @tire.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<%= form_for @tire do |t| %>
  <div class="form-group">
    <%= t.label :name, 'Name' %>
    <%= t.text_field :name, class:('form-control') %>
  </div>

  <div class="form-group">
    <%= t.label :brand_id, 'Brand' %>
    <%= t.select :brand_id, options_from_collection_for_select(Brand.all, :id, :name), {}, { class:('form-control') } %>
  </div>

  <div class="form-group">
    <%= t.label :spec, 'Spec.' %>
    <%= t.text_field :spec, class:('form-control') %>
  </div>

  <div class="form-group">
    <%= t.label :description, 'Description' %>
    <%= t.text_area :description, class:('form-control') %>
  </div>

  <div class="form-group">
    <%= t.label :price, 'Price' %>
    <div class="input-group">
      <span class="input-group-addon">$</span>
      <%= t.text_field :price, class:('form-control') %>
      <span class="input-group-addon">NTD</span>
    </div>
  </div>

  <div class="form-group">
    <%= t.label :start_date, 'Start date' %>
    <%= t.text_field :start_date, class:('form-control datepicker') %>
  </div>

  <div class="form-group">
    <%= t.label :end_date, 'End date' %>
    <%= t.text_field :end_date, class:('form-control datepicker') %>
  </div>

  <div class="form-action">
    <%= t.submit 'Submit', class:('btn btn-success') %>
    <%= link_to 'Cancel', tires_path, class:('btn btn-danger') %>
  </div>
<% end %>
