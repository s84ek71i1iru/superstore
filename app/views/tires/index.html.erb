<% if notice %>
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= notice %>
  </div>
<% end %>

<h1>Tires</h1>
<table class="table table-hover">
  <tbody>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Spec.</th>
      <th>Description</th>
      <th>Price</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Last update</th>
      <th></th>
    </tr>
    <% @tires.each do |tire| %>
    <tr>
      <td><%= tire.name %></td>
      <td><%= tire.brand.name %></td>
      <td><%= tire.spec %></td>
      <td><%= tire.description %></td>
      <td><%= tire.price %></td>
      <td><%= tire.start_date %></td>
      <td><%= tire.end_date %></td>
      <td><%= tire.updated_at.strftime('%Y-%m-%d %H:%I:%S') %></td>
      <td>
        <%= link_to 'Edit', edit_tire_path(tire), class: 'btn btn-primary' %>
        <%= link_to 'Delete', tire, method: :delete, class: 'btn btn-danger', data: {confirm: ('Are you Sure?')} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Tire', new_tire_path, class:('btn btn-success') %>
