<% if @brand.errors.any? %>
<div class="panel panel-danger">
  <div class="panel-heading">Problems</div>
  <div class="panel-body">
    <ul>
      <% @brand.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<%= form_for @brand do |b| %>

  <div class="form-group">
    <%= b.label :name, "Name" %>
    <%= b.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= b.label :description, "Description" %>
    <%= b.text_area :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= b.label :website, "Website" %>
    <%= b.text_field :website, class:"form-control" %>
  </div>

  <div class="action">
    <%= b.submit "Submit", class:'btn btn-success' %>
    <%= link_to 'cancel', brands_path, class:('btn btn-danger') %>
  </div>

<% end %>
